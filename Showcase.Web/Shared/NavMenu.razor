@inject NavigationManager navi

<nav>
        <a class="nav-link @(activeIndex == 1 ? "activated" : "")" href="/Showcase/" onclick="@(() => SetActiveIndex(1))">
                Home
        </a>
        <a class="nav-link no-wrap @(activeIndex == 2 ? "activated" : "")" href="/Showcase/demos/" onclick="@(() => SetActiveIndex(2))">
                Demos
        </a>
        <a class="nav-link no-wrap @(activeIndex == 3 ? "activated" : "")" href="/Showcase/bits/" onclick="@(() => SetActiveIndex(3))">
                Small scripts
        </a>
</nav>

@code{
    int activeIndex = 1;

    private void SetActiveIndex(int i)
    {
        activeIndex = i;
    }
}
