@page "/demos/"
@page "/Showcase/demos/"

@using Showcase.Web.Shared.Code;

<h1>Demos</h1>

<h2>Maze Generator</h2>

<table>
    @for (int i = 0; i <= 30; i++)
    {
        <tr>
            @for (int j = 0; j <= 50; j++)
            {
                var cellClass = maze[i, j] == 0 ? "path" : "wall";

                <td class="cell @cellClass">
                    @maze[i, j]
                </td>
            }
        </tr>
    }
</table>


@code {
    private byte[,] maze = Maze.Generate();
    int mazeWidth = 50;
    int mazeHeight = 30;
}